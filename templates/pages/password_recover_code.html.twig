{% extends "base.html.twig" %}

{% block title %}Vérification d'identité{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="/assets/css/global.css" />
    <link rel="stylesheet" type="text/css" href="/assets/css/pages/auth.css" />
    <link rel="stylesheet" type="text/css" href="/assets/css/components/otp.css" />
{% endblock %}

{% block body %}
    <div id="auth">
        <div class="row h-100">
            <div class="col-lg-5 col-12">
                <div id="auth-left">
                    {% include "includes/components/header_anonymous.html.twig" %}

                    <h1 class="auth-title">Vérification d'identité</h1>
                    <p class="auth-subtitle mb-5">Saisissez le code reçu par e-mail pour valider votre identité.</p>

                    {% include "includes/alerts.html.twig" %}

                    <form class="form" onsubmit="onSubmit(event)" action="{{ path("passwordrecover") }}" method="post">
                        <div class="form-group mb-4">
                            <fieldset class='number-code'>
                                <div class="d-flex">
                                    <input name='code' type="text" required class="form-control form-control-xl code-input text-center" inputmode="numeric" maxlength="1" pattern="[\d]*" tabindex="1" autocomplete="one-time-code" />
                                    <input name='code' type="text" required class="form-control form-control-xl code-input text-center" inputmode="numeric" maxlength="1" pattern="[\d]*" tabindex="1" autocomplete="one-time-code" />
                                    <input name='code' type="text" required class="form-control form-control-xl code-input text-center" inputmode="numeric" maxlength="1" pattern="[\d]*" tabindex="1" autocomplete="one-time-code" />
                                    <input name='code' type="text" required class="form-control form-control-xl code-input text-center" inputmode="numeric" maxlength="1" pattern="[\d]*" tabindex="1" autocomplete="one-time-code" />
                                    <input name='code' type="text" required class="form-control form-control-xl code-input text-center" inputmode="numeric" maxlength="1" pattern="[\d]*" tabindex="1" autocomplete="one-time-code" />
                                    <input name='code' type="text" required class="form-control form-control-xl code-input text-center" inputmode="numeric" maxlength="1" pattern="[\d]*" tabindex="1" autocomplete="one-time-code" />
                                </div>
                            </fieldset>
                        </div>

                        <input type="hidden" id="fullcode" name="fullcode" value="" />
                        <input type="hidden" id="user" name="user" value="{{ userId }}" />
                        <p class="text-center">
                            <button id="resend" class="btn btn-secondary" type="button" onclick="handleCodeMailResend()">
                                <div id="resend_spinner" class="spinner-border" role="status" style="display: none;"><span class="visually-hidden">Loading...</span></div>
                                <span id="resend_text">Renvoyer le code de vérification</span>
                            </button>
                        </p>
                        <button class="btn btn-primary btn-block btn-lg shadow-lg mt-5" type="submit">Valider mon identité</button>
                    </form>

                    <div class="text-center mt-5 text-lg fs-4">
                        <p class="text-gray-600">Déjà inscrit ? <a href="{{ path("login") }}" class="font-bold">Connectez-vous !</a></p>
                        <p class="text-gray-600">Pas encore de compte ? <a href="{{ path("register") }}" class="font-bold">Inscrivez-vous !</a></p>
                    </div>
                </div>
            </div>

            <div class="col-lg-7 d-none d-lg-block">
                <div id="auth-right"></div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="/assets/js/components/otp.js"></script>
    <script src="/assets/js/components/otp_resend_handler.js"></script>
{% endblock %}
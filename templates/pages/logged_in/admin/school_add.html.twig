{% extends "base.html.twig" %}

{% block title %}Administration > Établissements scolaires{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="/assets/css/global.css" />
{% endblock %}

{% block body %}
    <div id="app">
        {% include "includes/components/sidebar.html.twig" %}

        <div id="main">
            <header class="mb-3">
                <a href="#" class="burger-btn d-block d-xl-none">
                    <i class="bi bi-justify fs-3"></i>
                </a>
            </header>

            <div class="page-heading">
                <h3>Ajout d'un nouvel établissement scolaire</h3>
            </div>

            <div class="page-content">
                <div class="row">
                    <div class="col-12">
                        <form action="{{ path("admin_school_add") }}" method="POST" data-parsley-validate>
                            <div class="card">
                                <div class="card-header">
                                    <h4 class="card-title">Informations sur le nouvel établissement</h4>
                                </div>

                                <div class="card-body">
                                    <p class="text-muted">
                                        Remplissez les champs ci-dessous pour définir le nouvel établissement scolaire disponible sur LOSPAÉ, puis cliquez sur le bouton pour l'enregistrer et le rendre utilisable.
                                    </p>

                                    <div class="form-group position-relative has-icon-left mb-4">
                                        <input id="name" name="name" type="text" class="form-control form-control-xl" placeholder="Nom de l'établissement" data-parsley-required="true" data-parsley-error-message="Vous devez saisir le nom de l'établissement." data-parsley-maxlength="500">
                                        <div class="form-control-icon">
                                            <i class="fas fa-signature"></i>
                                        </div>
                                    </div>

                                    <div class="form-group position-relative has-icon-left mb-4">
                                        <input id="address" name="address" type="text" class="form-control form-control-xl" placeholder="Adresse de l'établissement" data-parsley-required="true" data-parsley-error-message="Vous devez saisir l'adresse de l'établissement." data-parsley-maxlength="500">
                                        <div class="form-control-icon">
                                            <i class="fas fa-map"></i>
                                        </div>
                                    </div>

                                    <div class="form-group position-relative has-icon-left mb-4">
                                        <input id="postalCode" name="postalCode" type="number" class="form-control form-control-xl" placeholder="Code postal de l'établissement" data-parsley-required="true" data-parsley-error-message="Vous devez saisir le code postal de l'établissement." data-parsley-maxlength="5">
                                        <div class="form-control-icon">
                                            <i class="fas fa-map"></i>
                                        </div>
                                    </div>

                                    <div class="form-group position-relative has-icon-left mb-4">
                                        <input id="city" name="city" type="text" class="form-control form-control-xl" placeholder="Ville de l'établissement" data-parsley-required="true" data-parsley-error-message="Vous devez saisir la ville de l'établissement." data-parsley-maxlength="500">
                                        <div class="form-control-icon">
                                            <i class="fas fa-map"></i>
                                        </div>
                                    </div>
                                </div>

                                <div class="card-footer d-flex justify-content-end">
                                    <button class="btn btn-light-primary" type="submit">Enregistrer le critère de notation</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            {% include "includes/components/footer.html.twig" %}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="/template/extensions/parsleyjs/parsley.min.js"></script>
    <script src="/template/extensions/parsleyjs/i18n/fr.js"></script>
    <script src="/template/static/js/pages/parsley.js"></script>
{% endblock %}
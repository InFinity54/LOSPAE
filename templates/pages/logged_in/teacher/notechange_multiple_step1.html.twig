{% extends "base.html.twig" %}

{% block title %}Modification de la note de plusieurs étudiants{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="/assets/css/global.css" />
{% endblock %}

{% block body %}
    <div id="app">
        {% include "includes/components/sidebar.html.twig" %}

        <div id="main">
            <header class="mb-3">
                <a href="#" class="burger-btn d-block d-xl-none">
                    <i class="bi bi-justify fs-3"></i>
                </a>
            </header>

            <div class="page-heading">
                <h3>Modification de la note de plusieurs étudiants</h3>
            </div>

            <div class="page-content">
                <div class="row">
                    <div class="col-12">
                        <form action="{{ path("teacher_notemultiplechange") }}" method="POST">
                            <div class="card">
                                <div class="card-header">
                                    <h4 class="card-title">Sélection des critères applicables</h4>
                                </div>

                                <div class="card-body">
                                    <p class="text-muted">
                                        Sélectionnez le ou les critères qui devront s'appliquer aux étudiants dans le cadre de cette modification, puis validez votre sélection.
                                    </p>

                                    <div class="row">
                                        <div class="col-sm-12">
                                            {% for criteria in criterias %}
                                            <div class="form-check">
                                                <div class="checkbox">
                                                    <input type="checkbox" id="criteria{{ criteria.id }}" name="criterias[]" value="{{ criteria.id }}" class="form-check-input">
                                                    <label for="criteria{{ criteria.id }}">{{ criteria.name }}</label>
                                                </div>
                                            </div>
                                            {% endfor %}
                                        </div>
                                    </div>
                                </div>

                                <div class="card-footer d-flex justify-content-end">
                                    <button class="btn btn-light-primary" type="submit">Sauvegarder la sélection</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            {% include "includes/components/footer.html.twig" %}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
{% endblock %}
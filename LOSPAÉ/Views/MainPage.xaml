<Page
    x:Class="LOSPAÉ.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <RelativePanel>
        <RelativePanel x:Name="MainPageHeader" Width="990">
            <ComboBox x:Name="StudentSelector" x:Uid="StudentSelector" SelectionChanged="StudentSelector_SelectionChanged" Width="350" RelativePanel.AlignLeftWithPanel="True"></ComboBox>
            <TextBlock x:Name="CurrentNote" Text="20/20" FontSize="50" RelativePanel.AlignRightWithPanel="True" />
        </RelativePanel>

        <RelativePanel x:Name="CPPanel" Width="200" RelativePanel.Below="MainPageHeader" Margin="0,30,0,0">
            <TextBlock x:Name="CPHead" x:Uid="CPHead" FontSize="20" Margin="0,0,0,10" />

            <StackPanel x:Name="CPStack1" Orientation="Vertical" RelativePanel.Below="CPHead">
                <Button x:Name="CP1" x:Uid="CP1" Click="CP1_Click" />
                <Button x:Name="CP3" x:Uid="CP3" Click="CP3_Click" Margin="0,10,0,0" />
                <Button x:Name="CP5" x:Uid="CP5" Click="CP5_Click" Margin="0,10,0,0" />
                <Button x:Name="CP7" x:Uid="CP7" Click="CP7_Click" Margin="0,10,0,0" />
                <Button x:Name="CP9" x:Uid="CP9" Click="CP9_Click" Margin="0,10,0,0" />
                <Button x:Name="CP11" x:Uid="CP11" Click="CP11_Click" Margin="0,10,0,0" />
                <Button x:Name="CP13" x:Uid="CP13" Click="CP13_Click" Margin="0,10,0,0" />
            </StackPanel>

            <StackPanel x:Name="CPStack2" Orientation="Vertical" RelativePanel.Below="CPHead" RelativePanel.RightOf="CPStack1">
                <Button x:Name="CP2" x:Uid="CP2" Click="CP2_Click" Margin="10,0,0,0" />
                <Button x:Name="CP4" x:Uid="CP4" Click="CP4_Click" Margin="10,10,0,0" />
                <Button x:Name="CP6" x:Uid="CP6" Click="CP6_Click" Margin="10,10,0,0" />
                <Button x:Name="CP8" x:Uid="CP8" Click="CP8_Click" Margin="10,10,0,0" />
                <Button x:Name="CP10" x:Uid="CP10" Click="CP10_Click" Margin="10,10,0,0" />
                <Button x:Name="CP12" x:Uid="CP12" Click="CP12_Click" Margin="10,10,0,0" />
            </StackPanel>
        </RelativePanel>

        <RelativePanel x:Name="DMPanel" Width="200" RelativePanel.Below="MainPageHeader" RelativePanel.RightOf="CPPanel" Margin="0,30,0,0">
            <TextBlock x:Name="DMHead" x:Uid="DMHead" FontSize="20" Margin="0,0,0,10" />

            <StackPanel x:Name="DMStack1" Orientation="Vertical" RelativePanel.Below="DMHead">
                <Button x:Name="DM1" x:Uid="DM1" Click="DM1_Click" />
                <Button x:Name="DM3" x:Uid="DM3" Click="DM3_Click" Margin="0,10,0,0" />
            </StackPanel>

            <StackPanel x:Name="DMStack2" Orientation="Vertical" RelativePanel.Below="DMHead" RelativePanel.RightOf="DMStack1">
                <Button x:Name="DM2" x:Uid="DM2" Click="DM2_Click" Margin="10,0,0,0" />
            </StackPanel>
        </RelativePanel>

        <RelativePanel x:Name="TPPanel" Width="200" RelativePanel.Below="MainPageHeader" RelativePanel.RightOf="DMPanel" Margin="0,30,0,0">
            <TextBlock x:Name="TPHead" x:Uid="TPHead" FontSize="20" Margin="0,0,0,10" />

            <StackPanel x:Name="TPStack1" Orientation="Vertical" RelativePanel.Below="TPHead">
                <Button x:Name="TP1" x:Uid="TP1" Click="TP1_Click" />
                <Button x:Name="TP3" x:Uid="TP3" Click="TP3_Click" Margin="0,10,0,0" />
                <Button x:Name="TP5" x:Uid="TP5" Click="TP5_Click"  Margin="0,10,0,0" />
                <Button x:Name="TP7" x:Uid="TP7" Click="TP7_Click" Margin="0,10,0,0" />
                <Button x:Name="TP9" x:Uid="TP9" Click="TP9_Click" Margin="0,10,0,0" />
                <Button x:Name="TP11" x:Uid="TP11" Click="TP11_Click" Margin="0,10,0,0" />
            </StackPanel>

            <StackPanel x:Name="TPStack2" Orientation="Vertical" RelativePanel.Below="TPHead" RelativePanel.RightOf="TPStack1">
                <Button x:Name="TP2" x:Uid="TP2" Click="TP2_Click" Margin="10,0,0,0" />
                <Button x:Name="TP4" x:Uid="TP4" Click="TP4_Click" Margin="10,10,0,0" />
                <Button x:Name="TP6" x:Uid="TP6" Click="TP6_Click" Margin="10,10,0,0" />
                <Button x:Name="TP8" x:Uid="TP8" Click="TP8_Click" Margin="10,10,0,0" />
                <Button x:Name="TP10" x:Uid="TP10" Click="TP10_Click" Margin="10,10,0,0" />
            </StackPanel>
        </RelativePanel>

        <RelativePanel x:Name="COPanel" Width="200" RelativePanel.Below="MainPageHeader" RelativePanel.RightOf="TPPanel" Margin="0,30,0,0">
            <TextBlock x:Name="COHead" x:Uid="COHead" FontSize="20" Margin="0,0,0,10" />

            <StackPanel x:Name="COStack1" Orientation="Vertical" RelativePanel.Below="COHead">
                <Button x:Name="CO1" x:Uid="CO1" Click="CO1_Click" />
                <Button x:Name="CO3" x:Uid="CO3" Click="CO3_Click" Margin="0,10,0,0" />
                <Button x:Name="CO5" x:Uid="CO5" Click="CO5_Click" Margin="0,10,0,0" />
            </StackPanel>

            <StackPanel x:Name="COStack2" Orientation="Vertical" RelativePanel.Below="COHead" RelativePanel.RightOf="COStack1">
                <Button x:Name="CO2" x:Uid="CO2" Click="CO2_Click" Margin="10,0,0,0" />
                <Button x:Name="CO4" x:Uid="CO4" Click="CO4_Click" Margin="10,10,0,0" />
            </StackPanel>
        </RelativePanel>

        <RelativePanel x:Name="DSPanel" Width="200" RelativePanel.Below="MainPageHeader" RelativePanel.RightOf="COPanel" Margin="0,30,0,0">
            <TextBlock x:Name="DSHead" x:Uid="DSHead" FontSize="20" Margin="0,0,0,10" />

            <StackPanel x:Name="DSStack1" Orientation="Vertical" RelativePanel.Below="DSHead">
                <Button x:Name="DS1" x:Uid="DS1" />
                <Button x:Name="DS3" x:Uid="DS3" Margin="0,10,0,0" />
            </StackPanel>

            <StackPanel x:Name="DSStack2" Orientation="Vertical" RelativePanel.Below="DSHead" RelativePanel.RightOf="DSStack1">
                <Button x:Name="DS2" x:Uid="DS2" Margin="10,0,0,0" />
                <Button x:Name="DS4" x:Uid="DS4" Margin="10,10,0,0" />
            </StackPanel>
        </RelativePanel>
    </RelativePanel>
</Page>
